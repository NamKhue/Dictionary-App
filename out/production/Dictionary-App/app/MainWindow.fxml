<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="mainBorderPane" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.MainWindowController">
    <center>
        <VBox fx:id="scroll">
            <ToolBar style="-fx-background-color: white">

                <Button fx:id="speech" accessibleRole="IMAGE_VIEW" layoutX="728.0" layoutY="14.0"
                        mnemonicParsing="false" text=" Speak" onMouseClicked="#speechEnglish">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0" layoutX="20.0" x="50.0" y="6.0">
                            <image>
                                <Image url="@ImageIcon/colorLoud.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND"/>
                    </cursor>
                </Button>
                <Button fx:id="editWord" accessibleRole="IMAGE_VIEW" layoutX="728.0" layoutY="14.0"
                        mnemonicParsing="false"
                        onMouseClicked="#showEditWordDialog" text=" Edit">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0">
                            <image>
                                <Image url="@ImageIcon/editing.png"/>
                            </image>

                            <viewport>
                                <Rectangle2D/>
                            </viewport>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND"/>
                    </cursor>

                </Button>
                <Button fx:id="deleteWord" accessibleRole="IMAGE_VIEW" layoutX="728.0" layoutY="14.0"
                        mnemonicParsing="false"
                        onMouseClicked="#removeWord" visible="true" text=" Delete">
                    <graphic>
                        <ImageView fitHeight="30.0" fitWidth="30.0">
                            <image>
                                <Image url="@ImageIcon/delete (1).png"/>
                            </image>

                            <viewport>
                                <Rectangle2D/>
                            </viewport>
                        </ImageView>
                    </graphic>
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND"/>
                    </cursor>

                </Button>
            </ToolBar>

            <TextArea fx:id="itemDetailsTextArea" editable="false" maxHeight="-Infinity" maxWidth="-Infinity"
                      prefHeight="600" prefWidth="1120.0" wrapText="true">
                <font>
                    <Font size="20.0"/>
                </font>
            </TextArea>


        </VBox>

    </center>
    <left>
        <GridPane BorderPane.alignment="CENTER">
            <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            </columnConstraints>
            <rowConstraints>
                <RowConstraints maxHeight="25.4" minHeight="10.0" prefHeight="22.4" vgrow="SOMETIMES"/>
                <RowConstraints maxHeight="88.4" minHeight="10.0" prefHeight="88.4" vgrow="SOMETIMES"/>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            </rowConstraints>
            <children>
                <ListView fx:id="listView" onKeyPressed="#handleKeyPressed" prefHeight="195.0" prefWidth="100.0"
                          style="-fx-font-size: 20" GridPane.columnIndex="0" GridPane.columnSpan="2"
                          GridPane.rowIndex="1" GridPane.rowSpan="2">
                    <cursor>
                        <Cursor fx:constant="OPEN_HAND"/>
                    </cursor>
                </ListView>
                <TextField fx:id="textSearch" onKeyPressed="#enterSearch" prefHeight="60.0" prefWidth="181.0"
                           GridPane.columnSpan="2">
                    <font>
                        <Font size="16.0"/>
                    </font>

                </TextField>
            </children>
        </GridPane>
    </left>
    <top>
        <ToolBar fx:id="topBar" prefHeight="0.0" prefWidth="994.0">
            <HBox>
                <Button fx:id="addWord" text="Add..." mnemonicParsing="false" onAction="#showNewWordDialog">
                    <tooltip>
                        <Tooltip text="Add a new  word"/>
                    </tooltip>
                    <graphic>
                        <ImageView fitHeight="40.0" fitWidth="40.0" translateZ="5.0">
                            <image>
                                <Image url="@ImageIcon/add.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                </Button>
            </HBox>
            <Button fx:id="buttonSwitch" text=" Translate" mnemonicParsing="false">
                <graphic>
                    <ImageView fitHeight="40.0" fitWidth="40.0">
                        <image>
                            <Image url="@ImageIcon/translate.png"/>
                        </image>
                    </ImageView>
                </graphic>
            </Button>

        </ToolBar>

    </top>
    <bottom>
        <TextField fx:id="bottomBar" alignment="CENTER" editable="false" opacity="0.89" text="Powered by @OOPFord Team"
                   BorderPane.alignment="CENTER">
            <font>
                <Font name="High Tower Text" size="16.0"/>
            </font>

        </TextField>
    </bottom>


</BorderPane>
