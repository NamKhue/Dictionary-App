<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.paint.*?>
<?import javafx.scene.text.*?>

<AnchorPane minHeight="-Infinity" minWidth="-Infinity" prefHeight="1200.0" prefWidth="1200.0" stylesheets="@css/style.css" xmlns="http://javafx.com/javafx/11.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.TranslateWordAndSentence">
    <children>
        <Label layoutX="16.0" layoutY="109.0" prefHeight="184.0" prefWidth="106.0" text="Word:" textFill="#91bdff">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
            <effect>
                <Lighting>
                    <bumpInput>
                        <Shadow />
                    </bumpInput>
                    <light>
                        <Light.Distant>
                            <color>
                                <Color red="0.461476594209671" green="0.6722697615623474" blue="0.8447368144989014" />
                            </color>
                        </Light.Distant>
                    </light>
                </Lighting>
            </effect>
        </Label>
        <TextArea fx:id="wordTargetArea" layoutX="130.0" layoutY="112.0" prefHeight="184.0" prefWidth="1030.0" wrapText="true">
            <font>
                <Font size="20.0" />
            </font>
        </TextArea>
        <Button fx:id="translateButton" layoutX="497.0" layoutY="345.0" mnemonicParsing="false" onAction="#translate" prefHeight="60.0" prefWidth="270.0" text="  Translate" textFill="#182a39">
            <font>
                <Font name="Calibri" size="24.0" />
            </font>
            <graphic>
                <ImageView fitHeight="50.0" fitWidth="50.0">
                    <Image url="@ImageIcon/translatation.png" />
                </ImageView>
            </graphic>
        </Button>
        <TextArea fx:id="wordExplainArea" editable="false" layoutX="125.0" layoutY="460.0" prefHeight="184.0" prefWidth="1039.0" wrapText="true">
            <font>
                <Font size="20.0" />
            </font>
        </TextArea>
        <Label layoutX="16.0" layoutY="462.0" prefHeight="184.0" prefWidth="111.0" text="Explain: " textFill="#3e6cb2">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
        <Button fx:id="comeback" layoutX="9.0" layoutY="14.0" mnemonicParsing="false" prefHeight="54.0" prefWidth="132.0" text=" Back">
            <graphic>
                <ImageView fitHeight="40.0" fitWidth="40.0">
                    <image>
                        <Image url="@ImageIcon/redBack.png" />
                    </image>
                </ImageView>
            </graphic>
         <font>
            <Font size="20.0" />
         </font>
        </Button>
        <Label alignment="CENTER" contentDisplay="CENTER" layoutX="361.0" layoutY="24.0" prefHeight="40.0" prefWidth="557.0" text="TRANSLATE WORD OR SENTENCES" textFill="#3a55af">
            <font>
                <Font name="System Bold" size="28.0" />
            </font>
        </Label>
    </children>
</AnchorPane>
